<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>

  <!-- DB接続情報 -->
  <context id="PostgresContext" targetRuntime="MyBatis3">

    <!-- 生成コードの特性 -->
    <property name="javaFileEncoding" value="UTF-8"/>
    <property name="beginningDelimiter" value=""/>
    <property name="endingDelimiter" value=""/>

    <!-- 不要なコメント抑制 -->
    <commentGenerator>
      <property name="suppressAllComments" value="true"/>
      <property name="suppressDate" value="true"/>
    </commentGenerator>

    <!-- JDBC接続 -->
    <jdbcConnection
      driverClass="org.postgresql.Driver"
      connectionURL="jdbc:postgresql://localhost:5432/app_db"
      userId="app_user"
      password="app_pass" />

    <!-- Entity（Domain） -->
    <javaModelGenerator
      targetPackage="com.kenrokudo.backend.domain"
      targetProject="src/main/java">
      <property name="enableSubPackages" value="false"/>
      <property name="trimStrings" value="true"/>
    </javaModelGenerator>

    <!-- Mapper XML -->
    <sqlMapGenerator
      targetPackage="mapper"
      targetProject="src/main/resources">
      <property name="enableSubPackages" value="false"/>
    </sqlMapGenerator>

    <!-- Mapper Interface -->
    <javaClientGenerator
      type="XMLMAPPER"
      targetPackage="com.kenrokudo.backend.mapper"
      targetProject="src/main/java">
      <property name="enableSubPackages" value="false"/>
    </javaClientGenerator>

    <!-- 対象テーブル -->
    <table tableName="individual"
           domainObjectName="Individual"
           enableCountByExample="false"
           enableUpdateByExample="false"
           enableDeleteByExample="false"
           enableSelectByExample="false" />

  </context>

</generatorConfiguration>
